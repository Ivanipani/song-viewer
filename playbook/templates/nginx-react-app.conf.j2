server {
    listen {{ server_port }};
    server_name {{ domain }};

    root {{ build_path_dest }};
    index index.html;

    # Audio files location
    location /media {
        alias {{ catalog_path_dest }};
        autoindex on;  # Optional: enables directory listing
        autoindex_format json;
        try_files $uri $uri/ =404;
        
        # add_header Access-Control-Allow-Origin *;
        # Replace the existing CORS header with this conditional one
        set $cors_origin "";
        if ($http_origin ~ "^(http://canciones\.poochella\.club|http://localhost(:[0-9]+)?$)") {
            set $cors_origin $http_origin;
        }
        
        add_header 'Access-Control-Allow-Origin' $cors_origin always;
        add_header 'Vary' 'Origin' always;

        # Configure content types for audio files and peak data
        types {
            audio/mpeg mp3;
            audio/ogg  ogg;
            audio/wav  wav;
            audio/aac  aac;
            audio/flac flac;
            application/json json;
        }

        # Set cache control for audio files with revalidation
        expires 6h;
        add_header Cache-Control "public, must-revalidate";

        # Specific handling for JSON peak files
        location ~ \.json$ {
            add_header Content-Type application/json;
            add_header 'Access-Control-Allow-Origin' $cors_origin always;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    location / {
        # Set cache headers only for index.html
        location = /index.html {
            expires 60s;
            add_header Cache-Control "public, no-cache, must-revalidate";

            try_files $uri =404;
        }

        try_files $uri $uri/ /index.html;
    }

}
